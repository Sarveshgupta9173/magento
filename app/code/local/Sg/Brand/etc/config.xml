<config>
    <modules>
        <SG_Brand>    
            <version>1.0.2</version>
        </SG_Brand>
    </modules>
    <frontend>
        <layout>
            <updates>
                <brand module="SG_Brand">
                    <file>brand.xml</file>
                </brand>
            </updates>
        </layout>
    </frontend>
    <global>
        <events>
            <brand_save_after>
                <observers>
                    <sg_brand_generate_brand_rewrite_url>
                        <class>SG_Brand_Model_Observer</class>
                        <method>generateRewriteUrl</method>
                    </sg_brand_generate_brand_rewrite_url>
                </observers>
            </brand_save_after>
        </events>
        <models>
            <brand>
                <class>SG_Brand_Model</class>
                <resourceModel>brand_resource</resourceModel>
            </brand>
            <brand_resource>
                <class>SG_Brand_Model_Resource</class>
                <deprecatedNode>brand_mysql4</deprecatedNode>
                <entities>
                    <brand>
                        <table>brand</table>
                    </brand>
                </entities>
            </brand_resource>
        </models>
        <resources>
            <brand_setup>
                <setup>
                    <module>SG_Brand</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </brand_setup>
            <brand_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </brand_write>
            <brand_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </brand_read>
        </resources>
        <blocks>
            <brand>
                <class>SG_Brand_Block</class>
            </brand>
        </blocks>
        <helpers>
           <brand>
                  <class>SG_brand_Helper</class>
            </brand>
        </helpers>
    </global>
    <admin>
        <routers>
            <Brand>
                <use>admin</use>
                <args>
                    <module>SG_Brand</module>
                    <frontName>brand</frontName>
                </args>
            </Brand>
        </routers>
    </admin>
</config>
