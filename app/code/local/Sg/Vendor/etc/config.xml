<config>
    <modules>
        <SG_Vendor>    
            <version>1.0.1</version>
        </SG_Vendor>
    </modules>
    <frontend>
    </frontend>
    <global>
        <models>
            <vendor>
                <class>SG_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <vendor_resource>
                <class>SG_Vendor_Model_Resource</class>
                <deprecatedNode>vendor_mysql4</deprecatedNode>
                <entities>
                    <vendor>
                        <table>vendor</table>
                    </vendor>
                    <vendor_address>
                        <table>vendor_address</table>
                    </vendor_address>
                </entities>
            </vendor_resource>
        </models>
        <resources>
            <vendor_setup>
                <setup>
                    <module>SG_Vendor</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </vendor_setup>
            <vendor_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </vendor_write>
            <vendor_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </vendor_read>
        </resources>
        <blocks>
            <vendor>
                <class>SG_Vendor_Block</class>
            </vendor>
        </blocks>
        <helpers>
           <vendor>
                  <class>SG_vendor_Helper</class>
            </vendor>
        </helpers>
    </global>
    <admin>
        <routers>
            <Vendor>
                <use>admin</use>
                <args>
                    <module>SG_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </Vendor>
        </routers>
         <!-- <layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout> -->
    </admin>
</config>